<UserControl x:Class="FlightSimulator.Views.AutoPilot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBox Name="CommandBox" Grid.Row="0" Margin="0,0,0,30" VerticalScrollBarVisibility="Visible" TextAlignment="Left" TextWrapping="Wrap" Text="{Binding AutoPilotCommands, UpdateSourceTrigger=PropertyChanged}" Background="{Binding Color, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"></TextBox>
        <Button Name="OK" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,75,20" Content="OK" Command="{Binding okCommand, UpdateSourceTrigger=PropertyChanged}"></Button>
        <Button Name="Clear" Grid.Row="1" HorizontalAlignment="Center" Margin="75,0,0,20" Content="CLEAR" Command="{Binding clearCommand, UpdateSourceTrigger=PropertyChanged}"></Button>
        
    </Grid>
</UserControl>
